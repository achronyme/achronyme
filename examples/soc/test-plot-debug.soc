// Simple test to debug plot rendering
println("Starting debug test...")

let data = signal([[0, 0], [1, 1], [2, 0], [3, -1], [4, 0]])

let app = () => do {
    ui_box("bg-[#1a1a1a] w-[600px] h-[500px] p-4 flex-col gap-4", () => do {
        ui_label("Debug Plot Test", "text-white text-2xl")

        ui_box("bg-[#111111] h-[300px] p-2", () => do {
            ui_plot({
                title: "Test Plot",
                x_label: "X",
                y_label: "Y",
                style: "w-full h-full",
                x_range: [0, 5],
                y_range: [-2, 2],
                series: [
                    {
                        kind: "line",
                        name: "Test",
                        data: data.value,
                        color: "#00ffff"
                    }
                ]
            })
        })

        ui_label("Controls below:", "text-white")
        ui_button("Click me", "bg-blue-500 text-white p-2")
    })
}

gui_run(app, {
    title: "Debug Test",
    width: 620,
    height: 550
})

println("Done")
