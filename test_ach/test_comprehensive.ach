print("--- Achronyme Comprehensive Logic Test ---")

// 1. Recursion (Fibonacci)
fn fib(n) {
    if n < 2 {
        return n
    }
    return fib(n - 1) + fib(n - 2)
}
print("Fib(10):")
print(fib(10)) // Expect 55

// 2. Closures (Counter)
fn make_counter(start) {
    mut count = start
    fn increment() {
        count = count + 1
        return count
    }
    return increment
}

mut c = make_counter(10)
print("Counter 1:")
print(c()) // 11
print("Counter 2:")
print(c()) // 12

// 3. Lists
mut list = [10, 20, 30]
print("List Original:")
print(list)
list[1] = 99
print("List Modified [1]:")
print(list[1]) // 99
print("List Size:")
print(len(list)) // 3

// 4. Maps
mut user = {
    name: "Achronyme",
    version: 0.3
}
print("User Name:")
print(user.name)
user.version = 1.0
print("User Version Updated:")
print(user["version"])

// 5. Logic & Control Flow
mut i = 0
mut sum = 0
while i < 5 {
    sum = sum + i
    i = i + 1
}
print("Sum 0..4:")
print(sum) // 10

// 6. Native Functions & Timing
print("Time check...")
mut t0 = time()
fib(15)
mut t1 = time()
print("Time taken for fib(15) (seconds):")
print(t1 - t0)

