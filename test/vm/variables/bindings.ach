// Variables: let, mut, reassignment

// Immutable let
let x = 42
assert(x == 42)

// Mutable binding + reassignment
mut y = 10
assert(y == 10)
y = 20
assert(y == 20)
y = y + 5
assert(y == 25)

// Multiple bindings
let a = 1
let b = 2
let c = a + b
assert(c == 3)

// Block as expression
let z = {
    let p = 10
    let q = 20
    p + q
}
assert(z == 30)

// Nested blocks as expressions
let n = {
    let a = {
        let b = 5
        b * 2
    }
    a + 1
}
assert(n == 11)

// Mutable in different types
mut s = "hello"
s = "world"
assert(s == "world")

mut arr = [1, 2]
arr = [3, 4, 5]
assert(len(arr) == 3)

mut flag = true
flag = false
assert(flag == false)

print("PASS: variables/bindings")
