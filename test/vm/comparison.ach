// Comparison and logical operators

// Equality
assert(1 == 1)
assert(!(1 == 2))
assert(1 != 2)
assert(!(1 != 1))

// Ordering on integers
assert(1 < 2)
assert(!(2 < 1))
assert(!(1 < 1))
assert(1 <= 1)
assert(1 <= 2)
assert(!(2 <= 1))
assert(2 > 1)
assert(!(1 > 2))
assert(1 >= 1)
assert(2 >= 1)
assert(!(1 >= 2))

// Ordering on floats
assert(1.5 < 2.5)
assert(3.0 >= 3.0)

// Logical NOT
assert(!false == true)
assert(!true == false)
assert(!!true == true)

// Logical AND (short-circuit)
assert(true && true)
assert(!(true && false))
assert(!(false && true))
assert(!(false && false))

// Logical OR (short-circuit)
assert(true || false)
assert(false || true)
assert(true || true)
assert(!(false || false))

// Chained logic
let a = 1
let b = 2
let c = 3
assert(a < b && b < c)
assert(a < c || b > c)

// Mixed
assert((1 == 1) && (2 != 3))
assert((1 > 2) || (3 > 2))

print("PASS: comparison")
