// Arithmetic operators: int, field, unary, exponentiation

// Integer arithmetic
assert(2 + 3 == 5)
assert(10 - 4 == 6)
assert(3 * 7 == 21)
assert(17 % 5 == 2)
assert(-(-3) == 3)

// Division (truncating for integers)
assert(15 / 3 == 5)
assert(10 / 2 == 5)
assert(7 / 2 == 3)

// Unary negation
assert(-5 + 10 == 5)
assert(-(3 + 4) == -7)

// Double negation
assert(-(-42) == 42)

// Modulo
assert(10 % 3 == 1)
assert(0 % 5 == 0)
assert(7 % 7 == 0)
assert(13 % 4 == 1)

// Exponentiation
assert(2 ^ 10 == 1024)
assert(3 ^ 0 == 1)
assert(5 ^ 1 == 5)
assert(2 ^ 3 == 8)

// Negative operands
assert(-3 * -4 == 12)
assert(-10 / -2 == 5)
assert(-3 + -4 == -7)

// Large integers
assert(1000000 * 1000 == 1000000000)
assert(999999 + 1 == 1000000)

// Zero identity
assert(0 + 42 == 42)
assert(42 - 0 == 42)
assert(0 * 999 == 0)

// Compound expressions
assert(2 + 3 * 4 == 14)
assert(10 - 2 * 3 == 4)
assert((2 + 3) * 4 == 20)
assert((10 - 2) * (3 + 1) == 32)

print("PASS: operators/arithmetic")
