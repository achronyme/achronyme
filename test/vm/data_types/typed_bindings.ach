// Type annotations on let/mut bindings (VM mode)
// Annotations are parsed but VM execution is untyped â€” this verifies
// that typed syntax is accepted without errors.

// Typed let bindings
let x: Field = 0p42
assert(x == 0p42)

let flag: Bool = true
assert(flag == true)

// Typed mut bindings
mut counter: Field = 0p0
counter = 0p10
assert(counter == 0p10)

mut ok: Bool = false
ok = true
assert(ok == true)

// Untyped bindings still work (gradual typing)
let y = 100
assert(y == 100)

mut z = "hello"
z = "world"
assert(z == "world")

