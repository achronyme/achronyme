// Type annotations on let/mut bindings (VM mode)
// Annotations are parsed but VM execution is untyped â€” this verifies
// that typed syntax is accepted without errors.

// Typed let bindings
let x: Field = field(42)
assert(x == field(42))

let flag: Bool = true
assert(flag == true)

// Typed mut bindings
mut counter: Field = field(0)
counter = field(10)
assert(counter == field(10))

mut ok: Bool = false
ok = true
assert(ok == true)

// Untyped bindings still work (gradual typing)
let y = 100
assert(y == 100)

mut z = "hello"
z = "world"
assert(z == "world")

