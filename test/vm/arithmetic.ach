// Basic math operators

// Integer arithmetic
assert(2 + 3 == 5)
assert(10 - 4 == 6)
assert(3 * 7 == 21)
assert(17 % 5 == 2)
assert(-(-3) == 3)

// Division (float result when not evenly divisible)
assert(15 / 3 == 5)
assert(10 / 2 == 5)
assert(7 / 2 == 3.5)

// Float arithmetic
assert(1.5 + 2.5 == 4.0)
assert(5.0 - 1.5 == 3.5)
assert(2.5 * 4.0 == 10.0)
assert(7.0 / 2.0 == 3.5)

// Precedence: multiplication before addition
assert(2 + 3 * 4 == 14)
assert(10 - 2 * 3 == 4)

// Parentheses override precedence
assert((2 + 3) * 4 == 20)
assert((10 - 2) * (3 + 1) == 32)

// Mixed int/float
assert(2 + 3.5 == 5.5)
assert(10 / 4.0 == 2.5)

// Unary negation
assert(-5 + 10 == 5)
assert(-(3 + 4) == -7)

// Modulo
assert(10 % 3 == 1)
assert(0 % 5 == 0)

print("PASS: arithmetic")
